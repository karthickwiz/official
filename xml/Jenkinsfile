pipeline {
    agent any
  
  stages {
        stage('Initialize') {
            steps {
                echo 'setting...'   
                 bat 'set'
            }
        }

		 stage('Testing') {
            steps {
                script {
                    try {
                        bat 'gradle clean test --no-daemon' 
                    } finally {
                        junit '**/build/test-results/test/*.xml' 
                    }
                }
            }
        }
   
       } 
    post { 
        always {            
             echo 'Testing completed Successfully!'
        }
    }
}


